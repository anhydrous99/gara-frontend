# Application Configuration
NODE_ENV=production

# Backend API (optional - only needed if USE_LOCAL_STORAGE=false)
NEXT_PUBLIC_API_URL=http://localhost:8080
GARA_API_KEY=your-api-key-here

# Authentication
ADMIN_PASSWORD=your-admin-password
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# ===== Local Storage Configuration =====

# Enable local file storage (recommended for local development)
USE_LOCAL_STORAGE=true

# Local uploads directory (absolute or relative to project root)
UPLOADS_DIR=./public/uploads

# Public path for serving uploaded images
UPLOADS_PUBLIC_PATH=/uploads

# ===== Observability Configuration =====

# Logging Configuration
LOG_LEVEL=info                      # debug, info, warn, error, fatal
ENABLE_REQUEST_LOGGING=true         # Enable/disable request logging middleware

# Metrics Configuration
ENABLE_METRICS=false                # Enable/disable metrics collection (set to false for local development)
METRICS_BACKEND=console             # console (logs to stdout), file (writes to file), or cloudwatch (AWS CloudWatch)

# ===== Example Values for Different Environments =====

# Local Development
# NODE_ENV=development
# LOG_LEVEL=debug
# ENABLE_METRICS=false
# USE_LOCAL_STORAGE=true
# UPLOADS_DIR=./public/uploads

# Production (with backend API)
# NODE_ENV=production
# LOG_LEVEL=info
# ENABLE_METRICS=true
# METRICS_BACKEND=cloudwatch
# USE_LOCAL_STORAGE=false
# NEXT_PUBLIC_API_URL=https://your-api-domain.com
