# Application Configuration
NODE_ENV=production

# Backend API
NEXT_PUBLIC_API_URL=http://localhost:8080
GARA_API_KEY=your-api-key-here

# Authentication
ADMIN_PASSWORD=your-admin-password
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# ===== Observability Configuration =====

# Logging Configuration
LOG_LEVEL=info                      # debug, info, warn, error, fatal
ENABLE_REQUEST_LOGGING=true         # Enable/disable request logging middleware

# Metrics Configuration
ENABLE_METRICS=false                # Enable/disable metrics collection (set to false for local development)
METRICS_BACKEND=console             # console (logs to stdout) or file (writes to file)

# ===== Example Values for Different Environments =====

# Local Development
# NODE_ENV=development
# LOG_LEVEL=debug
# ENABLE_METRICS=false
# NEXT_PUBLIC_API_URL=http://localhost:8080

# Production
# NODE_ENV=production
# LOG_LEVEL=info
# ENABLE_METRICS=true
# METRICS_BACKEND=file
# NEXT_PUBLIC_API_URL=https://your-api-domain.com
